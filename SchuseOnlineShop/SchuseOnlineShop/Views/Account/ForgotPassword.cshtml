@model ForgotPasswordVM


@section Links{

    <link rel="stylesheet" href="~/assets/css/forgot password/forgot password.css">
    <title>Forgot Password</title>
}

@{
    ViewData["Title"] = "ForgotPassword";
}


<main>
    <section id="top-column-content">
        <div class="column-content">
            <div class="title">
                <h2>Forgot Password</h2>
            </div>
            <div class="choose mt-4">
                <a asp-controller="Home" asp-action="Index">Home</a>
            </div>
        </div>
    </section>

    <section id="login-page" class="mt-5">
        <div id="main-wrapper" class="container">
            <div class="row justify-content-center">
                <div class="col-xl-10">
                    <div class="card border-0">
                        <div class="card-body p-0">
                            <div class="row no-gutters">
                                <div class="col-lg-6">
                                    <div class="p-5">
                                        <div class="mb-5">
                                            <h3 class="h4 font-weight-bold text-theme">Forgot Password</h3>
                                        </div>

                                        <h6 class="h5 mb-0 login-title">We will send you an email to reset your password.</h6>
                                        <p class="text-muted mt-2 mb-5"></p>

                                        <form method="post" asp-controller="Account" asp-action="ForgotPassword">
                                            <div class="form-group">
                                                <label for="exampleInputEmail1">Email address</label>
                                                <input type="email" asp-for="Email" class="form-control" id="exampleInputEmail1">
                                                <span class="text-danger" asp-validation-for="Email"></span>
                                            </div>

                                            <button type="submit" class="btn btn-theme">Submit</button>
                                            <a asp-controller="Account" asp-action="Login" class="forgot-link float-right text-primary">Cancel</a>
                                        </form>
                                    </div>
                                </div>

                                <div class="col-lg-6 d-none d-lg-inline-block">
                                    <div class="account-block rounded-right">
                                        <div class="overlay rounded-right"></div>
                                        <div class="account-testimonial">
                                            <h4 class="text-white mb-4">Stylish shoes are here!</h4>
                                            <p class="lead text-white">"You are making the right choice"</p>
                                            <p>- Admin User</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <!-- end card-body -->
                    </div>
                    <!-- end card -->
                    <!-- end row -->

                </div>
                <!-- end col -->
            </div>
            <!-- Row -->
        </div>
    </section>


</main>

@section Script{

    <script src="https://kit.fontawesome.com/b01bc4ce26.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js
    "></script>
    <script src="https://code.jquery.com/jquery-2.2.0.min.js" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.6.0/slick.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

    <script src="~/assets/js/forgot password.js"></script>
 }
