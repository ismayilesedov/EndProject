@model LoginVM
@inject ILayoutService layout;


@section Links{

    <link rel="stylesheet" href="~/assets/css/login/login.css">
    <title>Login</title>
}

@{
    ViewData["Title"] = "Index";
}



<main>
    <section id="top-column-content">
        <div class="column-content">
            <div class="title">
                <h2>Account</h2>
            </div>
            <div class="choose mt-4">
                <a <a asp-controller="Home" asp-action="Index">Home</a>
            </div>
        </div>
    </section>

    <section id="login-page" class="mt-5">
        <div id="main-wrapper" class="container">
            <div class="row justify-content-center">
                <div class="col-xl-10">
                    <div class="card border-0">
                        <div class="card-body p-0">
                            <div class="row no-gutters">
                                <div class="col-lg-6">
                                    <div class="p-5">
                                        <div class="mb-5">
                                            <h3 class="h4 font-weight-bold text-theme">Login</h3>
                                        </div>

                                        <h6 class="h5 mb-0 login-title">Welcome back!</h6>
                                        <p class="text-muted mt-2 mb-5">
                                            Enter your email address and password to
                                            access account.
                                        </p>
                                        <div class="text-danger" asp-validation-summary="All"></div>
                                        <form method="post" asp-controller="Account" asp-action="Login">
                                            <div class="form-group">
                                                <label for="exampleInputEmail1">Email address</label>
                                                <input type="email" class="form-control" id="exampleInputEmail1" asp-for="Email">
                                            </div>
                                            <div class="form-group mb-5 password-input">
                                                <label for="exampleInputPassword1">Password</label>
                                                <i class="fa-solid fa-eye-slash eyes"></i>

                                                <input type="password" class="form-control" id="exampleInputPassword1" asp-for="Password">
                                            </div>
                                            <button type="submit" class="btn btn-theme">Login</button>
                                            <a asp-controller="Account" asp-action="ForgotPassword"
                                               class="forgot-link float-right text-primary"> Forgot password? </a>
                                        </form>
                                    </div>
                                </div>

                                <div class="col-lg-6 d-none d-lg-inline-block">
                                    <div class="account-block rounded-right">
                                        <div class="overlay rounded-right"></div>
                                        <div class="account-testimonial">
                                            <h4 class="text-white mb-4">Stylish shoes are here!</h4>
                                            <p class="lead text-white">"You are making the right choice"</p>
                                            <p>- Admin User</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <!-- end card-body -->
                    </div>
                    <!-- end card -->

                    <p class="text-muted text-center mt-5 mb-0 ">
                        Don't have an account? <a asp-controller="Account" asp-action="Register" class="text-primary ml-1">register</a>
                    </p>

                    <!-- end row -->

                </div>
                <!-- end col -->
            </div>
            <!-- Row -->
        </div>
    </section>


</main>

@section Script{



    <script src="~/assets/js/login.js"></script>
 }