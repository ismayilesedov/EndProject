@model TeamCreateVM
@{
    ViewData["Title"] = "Create";
}
<section class="pcoded-main-container">
    <div class="pcoded-content">

        <div class="row">
            <div class="col-12">
                <form method="post" enctype="multipart/form-data" asp-action="Create">
                    <span class="text-danger">@ViewBag.error</span>
                    <div class="form-group">
                        <label style="color:black; font-weight:700; font-size:22px">Image</label>
                        <input type="file" class="form-control" asp-for="Photo">
                        <span class="text-danger" asp-validation-for="Photo"></span>
                    </div>
                    <div class="form-group">
                        <label style="color:black; font-weight:700; font-size:22px">FullName</label>
                        <input type="text" class="form-control" asp-for="FullName">
                        <span class="text-danger" asp-validation-for="FullName"></span>
                    </div>
                    <div class="form-group">
                        <label style="color:black; font-weight:700; font-size:22px">Position</label>
                        <input class="form-control" rows="3" asp-for="Position"></input>
                        <span class="text-danger" asp-validation-for="Position"></span>
                    </div>
                    <a asp-action="Index" style="background-color:red" class="btn btn-danger"><i class="fa-solid fa-backward"></i>  Cancel</a>
                    <button type="submit" style="background-color:#05b505" class="btn btn-success"><i class="feather mr-2 icon-check-circle"></i>Submit</button>
                </form>
            </div>
        </div>

    </div>
</section>

