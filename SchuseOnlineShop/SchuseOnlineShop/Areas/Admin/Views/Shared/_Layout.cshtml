

﻿
@inject UserManager<AppUser> userManager;


<!DOCTYPE html>
<html lang="en">

<head>
	<title>Schuse - Admin Panel</title>
	<!-- HTML5 Shim and Respond.js IE11 support of HTML5 elements and media queries -->
	<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
	<!--[if lt IE 11]>
		<script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
		<script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
		<![endif]-->
	<!-- Meta -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="description" content="" />
	<meta name="keywords" content="">
	<meta name="author" content="Phoenixcoded" />
	<!-- Favicon icon -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
	<link rel="icon" href="~/admin/assets/images/favicon.ico" type="image/x-icon">

	<!-- vendor css -->
	<link rel="stylesheet" href="~/admin/assets/css/style.css">

	@await RenderSectionAsync("Css",required:false)


</head>
<body class="">
	<!-- [ Pre-loader ] start -->
	<div class="loader-bg">
		<div class="loader-track">
			<div class="loader-fill"></div>
		</div>
	</div>
	<!-- [ Pre-loader ] End -->
	<!-- [ navigation menu ] start -->
	<nav class="pcoded-navbar  ">
		<div class="navbar-wrapper  ">
			<div class="navbar-content scroll-div ">

				<div class="">
					<div class="main-menu-header">
						<img class="img-radius" src="~/admin/assets/images/user/avatar-2.jpg" alt="User-Profile-Image">
						<div class="user-details">
							@if (!User.Identity.IsAuthenticated)
							{
								<button type="submit">
									<span>Login</span>
								</button>

							}
							else
							{
								<span>
									@userManager.Users.FirstOrDefault(u=>u.UserName==User.Identity.Name).FirstName.ToUpper() @userManager.Users.FirstOrDefault(u=>u.UserName==User.Identity.Name).LastName
								</span>


							}

							<div id="more-details">Developer<i class="fa fa-chevron-down m-l-5"></i></div>
						</div>
					</div>
					<div class="collapse" id="nav-user-link">
						<ul class="list-unstyled">
							<form asp-controller="Account" asp-action="AdminLogin" asp-route-userId="@userManager.Users.Where(u=>u.UserName==User.Identity.Name).FirstOrDefault().Id" method="post">
								<div class="logout">
									<button style="border: none; color: #ffffff; background: transparent; margin-left: 15px; font-size: 15px;" type="submit">Logout</button>
								</div>
							</form>
						</ul>
					</div>
				</div>

				<ul class="nav pcoded-inner-navbar ">
					<li class="nav-item pcoded-menu-caption">
						<label>Navigation</label>
					</li>
					<li class="nav-item">
						<a asp-controller="Dashboard" asp-action="Index" class="nav-link "><span class="pcoded-micon"><i class="feather icon-home"></i></span><span class="pcoded-mtext">Dashboard</span></a>
					</li>
					<li class="nav-item">
						<a asp-controller="Slider" asp-action="Index" class="nav-link "><span class="pcoded-micon"><i class="fa-regular fa-image"></i></span><span class="pcoded-mtext">Sliders</span></a>
					</li>
					<li class="nav-item">
						<a asp-controller="Product" asp-action="Index" class="nav-link "><span class="pcoded-micon"><i class="fa-regular fa-folder-open"></i></span><span class="pcoded-mtext">Products</span></a>
					</li>
					<li class="nav-item">
						<a asp-controller="Blog" asp-action="Index" class="nav-link "><span class="pcoded-micon"><i class="fa-solid fa-certificate"></i></span><span class="pcoded-mtext">Blogs</span></a>
					</li>
				
					<li class="nav-item">
						<a asp-controller="HomeCategory" asp-action="Index" class="nav-link "><span class="pcoded-micon"><i class="fa-solid fa-globe"></i></span><span class="pcoded-mtext">HomeCategory</span></a>
					</li>
					<li class="nav-item">
						<a asp-controller="Category" asp-action="Index" class="nav-link "><span class="pcoded-micon"><i class="fa-solid fa-paperclip"></i></span><span class="pcoded-mtext">Categories</span></a>
					</li>
					<li class="nav-item">
						<a asp-controller="SubCategory" asp-action="Index" class="nav-link "><span class="pcoded-micon"><i class="fa-solid fa-paperclip"></i></span><span class="pcoded-mtext">SubCategory</span></a>
					</li>
					<li class="nav-item">
						<a asp-controller="Size" asp-action="Index" class="nav-link "><span class="pcoded-micon"><i class="fa-solid fa-share"></i></span><span class="pcoded-mtext">Sizes</span></a>
					</li>
					<li class="nav-item">
						<a asp-controller="BrandLogo" asp-action="Index" class="nav-link "><span class="pcoded-micon"><i class="fa-regular fa-copyright"></i></span><span class="pcoded-mtext">Brand Logo</span></a>
					</li>
					<li class="nav-item">
						<a asp-controller="Color" asp-action="Index" class="nav-link "><span class="pcoded-micon"><i class="fa-solid fa-palette"></i></span><span class="pcoded-mtext">Colors</span></a>
					</li>
					<li class="nav-item">
						<a asp-controller="Team" asp-action="Index" class="nav-link "><span class="pcoded-micon"><i class="fa-regular fa-address-card"></i></span><span class="pcoded-mtext">Teams</span></a>
					</li>
					<li class="nav-item">
						<a asp-controller="User" asp-action="Index" class="nav-link "><span class="pcoded-micon"><i class="feather icon-home"></i></span><span class="pcoded-mtext">Users</span></a>
					</li>
					<li class="nav-item">
						<a asp-controller="Setting" asp-action="Index" class="nav-link "><span class="pcoded-micon"><i class="fa-solid fa-pen-nib"></i></span><span class="pcoded-mtext">Settings</span></a>
					</li>
					<li class="nav-item">
						<a asp-controller="SectionHeader" asp-action="Index" class="nav-link "><span class="pcoded-micon"><i class="fa-solid fa-pen-nib"></i></span><span class="pcoded-mtext">SectionHeaders</span></a>
					</li>
					<li class="nav-item">
						<a asp-controller="SectionBackground" asp-action="Index" class="nav-link "><span class="pcoded-micon"><i class="feather icon-home"></i></span><span class="pcoded-mtext">SectionBackgrounds</span></a>
					</li>
					<li class="nav-item">
						<a asp-controller="Brand" asp-action="Index" class="nav-link "><span class="pcoded-micon"><i class="fa-brands fa-blogger"></i></span><span class="pcoded-mtext">Brands</span></a>
					</li>
					<li class="nav-item">
						<a asp-controller="ProductComment" asp-action="Index" class="nav-link "><span class="pcoded-micon"><i class="fa-solid fa-comment"></i></span><span class="pcoded-mtext">Product Comments</span></a>
					</li>
					


				</ul>
			</div>
		</div>
	</nav>
	<!-- [ navigation menu ] end -->
	<!-- [ Header ] start -->
	<header class="navbar pcoded-header navbar-expand-lg navbar-light header-dark">
		<div class="m-header">
			<a class="mobile-menu" id="mobile-collapse" href="#!"><span></span></a>
			<a href="#!" class="b-brand">
				<!-- ========   change your logo hear   ============ -->
				<a asp-area="null" asp-controller="Home" asp-action="Index">
					<img src="~/admin/assets/images/logo_200x.webp" alt="" class="logo">
				</a>
				<img src="~/admin/assets/images/logo-icon.png" alt="" class="logo-thumb">
			</a>
			<a href="#!" class="mob-toggler">
				<i class="feather icon-more-vertical"></i>
			</a>
		</div>
		<div class="collapse navbar-collapse">
			<ul class="navbar-nav mr-auto">
		
			</ul>
		</div>


	</header>
	<!-- [ Header ] end -->
	@RenderBody()
	<!-- Required Js -->
	<script src="~/admin/assets/js/vendor-all.min.js"></script>
	<script src="~/admin/assets/js/plugins/bootstrap.min.js"></script>
	<script src="~/admin/assets/js/pcoded.min.js"></script>

	<!-- Apex Chart -->
	<script src="~/admin/assets/js/plugins/apexcharts.min.js"></script>


	<!-- custom-chart js -->
	<script src="~/admin/assets/js/pages/dashboard-main.js"></script>
	@await RenderSectionAsync("Script",required:false)

</body>

</html>
